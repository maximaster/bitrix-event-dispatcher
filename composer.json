    "minimum-stability": "RC",
    "prefer-stable": true,
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "symfony/event-dispatcher": "^7.0",
        "marcosh/lamphpda": "^3.0",
        "maximaster/bitrix-value-objects": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Maximaster\\BitrixEventDispatcher\\": "src/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.59",
        "psalm/phar": "^5.25"
    }
}
